#!/bin/sh
# To enable this hook, rename this file to "pre-commit".

## Change Path to Python Here: ##

python_path=python

#python_path=~/Anaconda3/python

##

shopt -s nullglob

for i in **/*.ipynb; do
	$python_path ./.git/hooks/jupyter-clear-output.py $i
done

for i in *.ipynb; do
	$python_path ./.git/hooks/jupyter-clear-output.py $i
done

git add .
